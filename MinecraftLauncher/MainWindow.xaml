<Window x:Class="MinecraftLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinecraftLauncher"
        mc:Ignorable="d"
        Title="Minecraft Launcher" Height="450" Width="800"
        Background="#f5f5f5"
        ResizeMode="CanMinimize"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Button hover style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4285F4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3367D6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox hover style -->
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4285F4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox style -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Label -->
        <TextBlock Text="Welcome to Minecraft Launcher!" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#333" 
                   HorizontalAlignment="Center"
                   Margin="0,20,0,10"
                   x:Name="label1"/>

        <StackPanel Grid.Row="1"
                    VerticalAlignment="Top"
                    Margin="20"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    Width="300">

            <TextBlock Text="Select a Minecraft version to launch:" 
                       FontSize="16" 
                       Margin="0,10,0,5"/>

            <ComboBox x:Name="versioncb" 
                      Height="30"
                      Margin="0,0,0,10"/>

            <TextBlock Text="Username:"
                       FontSize="16"
                       x:Name="label2"
                       Margin="0,10,0,5"/>

            <TextBox x:Name="usernametbox"
                     Height="30"
                     Margin="0,0,0,10"/>

            <Button Content="Launch Minecraft"
                    x:Name="button1"
                    Height="35"
                    Margin="0,10,0,10"
                    Click="button1_Click"
                    />

            <ProgressBar x:Name="progressPb"
                         Height="20"
                         IsIndeterminate="False"
                         Visibility="Visible"
                         Margin="0,10,0,5"/>

            <Label Content="0%" 
                   x:Name="progresslb"
                   FontSize="14"
                   Foreground="#555"
                   HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
